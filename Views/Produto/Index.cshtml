@model IEnumerable<Analista_Aula01.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Cadastrar Produto</a>
</p>
 <div>
    @using (Html.BeginForm("Index", "Produto", FormMethod.Get))
    {
            <p>
                 @Html.TextBox("Pesquisa") 
                <input type="submit" value="Pesquisar" />
            </p>
    }
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProdutoNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProdutoPeso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QntdEstoque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusProduto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoProduto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProdutoNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProdutoPeso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QntdEstoque)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusProduto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoProduto.NomeTipoProduto)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProdutoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProdutoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProdutoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
